{
  "executablePath": "/usr/bin/chromium-browser",
  "args": [
    "--no-sandbox",
    "--disable-setuid-sandbox",
    "--disable-dev-shm-usage",
    "--disable-accelerated-2d-canvas",
    "--no-first-run",
    "--no-zygote",
    "--single-process",
    "--disable-gpu",
    "--disable-crash-reporter",
    "--disable-breakpad",
    "--crash-dumps-dir=/tmp/chrome-crashpad"
  ]
}